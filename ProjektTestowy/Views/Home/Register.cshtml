@model Testowy.Domain.User
@{
    ViewBag.Title = "Rejestracja";
}

<div class=" from-horizontal">
    <h1>Rejestracja</h1>

    @Html.ValidationSummary()

    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {

        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "control-laber col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Name)
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Login, new { @class = "control-laber col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Login)
                @Html.ValidationMessageFor(x => x.Login)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "control-laber col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(x => x.Password)
                @Html.ValidationMessageFor(x => x.Password)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-laber col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zarejestruj" class="btn btn-default" />
            </div>
        </div>
    }

</div>