@model Testowy.Domain.User
@{
    ViewBag.Title = "Logowanie";
}

<div class=" from-horizontal">
    <h1>Logowanie</h1>
    
    @Html.ValidationSummary()

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
    <div class="form-group">
        @Html.LabelFor(x => x.Login, new { @class = "control-laber col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "control-laber col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" >
            <input type="submit" value="Zaloguj" class="btn btn-default"/>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Zapomniałeś hasła?","ChangePassword","Home")
    </div>
</div>